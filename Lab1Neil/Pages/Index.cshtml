@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Student List</h1>
</div>

<div class="d-flex flex-wrap justify-content-center m-auto cards">
    @foreach (var student in Model.dataSource.myList)
    {
        <div class="card m-4 card-custom">
            <img class="card-img-top card-img" src="@student.Image" alt="Card image cap">
            <div class="card-body">
                <p class="card-text"><i class="bi bi-person-video2"></i> @student.StudentNumber </p>
                <p class="card-text"><i class="bi bi-layout-text-sidebar-reverse"></i> @student.FullName</p>
                <p class="card-text"><i class="bi bi-envelope"></i> @student.Email</p>
                <div>
                    <a asp-page="/Edit" asp-route-id="@student.StudentNumber" class="btn btn-warning w-100 mt-1"><i class="bi bi-pencil-square"></i></a>
                    <a asp-page="/Delete" asp-route-id="@student.StudentNumber" class="btn btn-danger w-100 mt-1"><i class="bi bi-trash3"></i></a>
                </div>
            </div>
        </div>
    }
</div>
